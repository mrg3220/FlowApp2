model Competition {
  id        String   @id @default(uuid())
  schoolId  String?  @map("school_id")  // null = open
  name      String
  location  String?
  eventDate DateTime @map("event_date") @db.Date
  notes     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  school  School?            @relation("SchoolCompetitions", fields: [schoolId], references: [id])
  entries CompetitionEntry[]

  @@map("competitions")
}

model CompetitionEntry {
  id            String    @id @default(uuid())
  competitionId String    @map("competition_id")
  studentId     String    @map("student_id")
  division      String?   // "Youth Sparring", "Adult Forms"
  weightClass   String?   @map("weight_class")
  placement     Int?      // 1, 2, 3...
